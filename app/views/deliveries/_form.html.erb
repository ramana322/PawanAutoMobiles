<%= simple_form_for(delivery) do |f| %>
  <ul>
    <% delivery.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  <div class="form-group row">
    <%= f.label :engine_no, class: "col-form-label col-sm-2" %>
    <div class="col-sm-6">
      <%= f.text_field(:engine_no,  :class => "form-control") %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :chassis_no, class: "col-form-label col-sm-2" %>
    <div class="col-sm-6">
      <%= f.text_field :chassis_no, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :total_cost, class: "col-form-label col-sm-2" %>
    <div class="col-sm-6">
      <%= f.text_field :total_cost, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :subsidy, class: "col-form-label col-sm-2" %>
    <div class="col-sm-6">
      <%= f.text_field :subsidy, class: 'form-control' %>
    </div>
  </div>
  
  <div class="form-group row">
    <%= f.label :insurance, class: "col-form-label col-sm-2" %>
    <div class="col-sm-6">
      <%= f.text_field :insurance, class: 'form-control' %>
    </div>
  </div>

  <%= f.simple_fields_for :customer do |c| %>
    <div class="form-group row">
      <%= c.label :name, class: "col-form-label col-sm-2" %>
      <div class="col-sm-6">
        <%= c.text_field :name, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group row">
      <%= c.label :address, class: "col-form-label col-sm-2" %>
      <div class="col-sm-6">
        <%= c.input :address, as: :text, label: false, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group row">
      <%= c.label :mobile_number, class: "col-form-label col-sm-2" %>
      <div class="col-sm-6">
        <%= c.text_field :mobile_number, class: 'form-control' %>
      </div>
    </div>
  <% end %>

  <div class="form-group row">
    <%= f.label :registration, class: "col-form-label col-sm-2" %>
    <div class="col-sm-6">
      <%= f.text_field :registration, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :warranty, class: "col-form-label col-sm-2" %>
    <div class="col-sm-6">
      <%= f.text_field :warranty, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :transport, class: "col-form-label col-sm-2" %>
    <div class="col-sm-6">
      <%= f.text_field :transport, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :agreements, class: "col-form-label col-sm-2" %>
    <div class="col-sm-6">
      <%= f.text_field :agreements, class: 'form-control' %>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-6 text-center">
      <%= f.submit "Save", class: "btn btn-primary mb-2" %>
      <%= link_to "Cancel", :back,  class: 'btn btn-secondary mb-2', data: { confirm: 'Are you sure you want to leave this page?' } %>
    </div>
  </div>
<% end %>